{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "enabled": false,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": ["@sewellstephens/"],
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true,
      "groupName": "Internal packages updates"
    },
    {
      "matchPackagePrefixes": ["slate"],
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true,
      "groupName": "Slate packages updates"
    },
    {
      "excludePackagePrefixes": ["@sewellstephens/", "slate"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "schedule": "every weekend",
      "groupName": "External updates"
    },
    {
      "excludePackagePrefixes": ["@sewellstephens/", "slate"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "schedule": "every weekend"
    },
    {
      "matchPackagePrefixes": ["@excalidraw"],
      "enabled": false
    }
  ]
}
